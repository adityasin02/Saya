/**
 * @fileoverview Firestore Security Rules for VibeLoop Music Player
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model. Each user has full control over their own data, including songs, playlists, preferences, and AI recommendations. No cross-user access is permitted except where explicitly allowed.
 *
 * Data Structure:
 * All data is nested under `/users/{userId}`, creating a clear ownership hierarchy. Subcollections include `/songs`, `/playlists`, `/preferences`, and `/recommendations`.
 *
 * Key Security Decisions:
 * - User listing is disallowed to protect privacy.
 * - Each user can only create, update and delete their own data.
 * - Authorization independence achieved with denormalized `songIds` in Playlists to reduce reads.
 * - The preferenceId is the same as the userId in the `/users/{userId}/preferences/{preferenceId}` collection.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secure the /users collection to prevent listing.
     * @path /users
     * @allow NONE
     * @deny list
     * @principle Prevents user enumeration and protects user privacy.
     */
    match /users {
      allow list: if false;
    }

    /**
     * @description Defines helper function to check if the user is signed in
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Defines helper function to check if the user is the owner of the document.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Defines helper function to check if the user is the owner of the existing document.
     * This checks the existing document and verifies that it exists to avoid errors.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Secure the /users/{userId}/songs/{songId} collection.
     * @path /users/{userId}/songs/{songId}
     * @allow (create) User with ID 'user123' creates a new song with ID 'song456' under their user ID.
     * @allow (get, list, update, delete) User with ID 'user123' reads, updates, deletes their own song with ID 'song456'.
     * @deny (create, update, delete) User with ID 'user456' tries to create, update, or delete a song under user ID 'user123'.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/songs/{songId} {
      allow create: if isSignedIn() && isOwner(userId);
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secure the /users/{userId}/playlists/{playlistId} collection.
     * @path /users/{userId}/playlists/{playlistId}
     * @allow (create) User with ID 'user123' creates a new playlist with ID 'playlist456' under their user ID.
     * @allow (get, list, update, delete) User with ID 'user123' reads, updates, deletes their own playlist with ID 'playlist456'.
     * @deny (create, update, delete) User with ID 'user456' tries to create, update, or delete a playlist under user ID 'user123'.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/playlists/{playlistId} {
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == playlistId;
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secure the /users/{userId}/preferences/{preferenceId} collection.
     * @path /users/{userId}/preferences/{preferenceId}
     * @allow (create) User with ID 'user123' creates their preference document, preferenceId is the same as the userId.
     * @allow (get, list, update, delete) User with ID 'user123' reads, updates, deletes their own preferences document.
     * @deny (create, update, delete) User with ID 'user456' tries to create, update, or delete preferences under user ID 'user123'.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/preferences/{preferenceId} {
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId && preferenceId == userId;
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id && preferenceId == userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secure the /users/{userId}/recommendations/{recommendationId} collection.
     * @path /users/{userId}/recommendations/{recommendationId}
     * @allow (create) User with ID 'user123' creates a new AI recommendation with ID 'recommendation456' under their user ID.
     * @allow (get, list, update, delete) User with ID 'user123' reads, updates, deletes their own AI recommendation with ID 'recommendation456'.
     * @deny (create, update, delete) User with ID 'user456' tries to create, update, or delete a recommendation under user ID 'user123'.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/recommendations/{recommendationId} {
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId && request.resource.data.id == recommendationId;
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId) && request.resource.data.userId == userId && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }
  }
}
